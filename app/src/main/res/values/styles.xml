<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#607d8b</item>
        <item name="colorPrimaryDark">#78909c</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionButtonStyle">@style/myActionButtonStyle</item>
    </style>
    <style name="myActionButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:minWidth">30dp</item>
        <item name="android:maxWidth">48dp</item>
        <item name="android:width">38dp</item>
        <item name="android:height">30dp</item>
        <item name="android:maxHeight">38dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="noBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
