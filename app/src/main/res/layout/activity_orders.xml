<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="in.curience.hacktrec.Activities.OrdersActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Item "
            android:layout_gravity="center_horizontal"
            android:layout_weight="3"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/ordered_item_name"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantity"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/ordered_item_quantity"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:id="@+id/ordered_item_amount"
            />
    </LinearLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/order_recycler_view"
            android:scrollbars="vertical"
            android:background="#5dd6d7d7"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Amount"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:id="@+id/order_sub_total_amount"
            android:layout_alignParentRight="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Total :"
            android:padding="5dp"
            android:layout_marginTop="2dp"
            android:id="@+id/order_sub_total"
            android:layout_toLeftOf="@id/order_sub_total_amount"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_tax"
            android:text="@string/tax_value"
            android:layout_alignParentRight="true"
            android:layout_below="@id/order_sub_total_amount"
            android:padding="5dp"
            android:layout_marginRight="5dp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tax :"
            android:padding="5dp"
            android:id="@+id/Tax"
            android:layout_below="@id/order_sub_total"
            android:layout_toLeftOf="@id/order_tax"
            android:layout_alignRight="@id/order_sub_total"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:padding="5dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/order_tax"
            android:id="@+id/total_amount"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_toLeftOf="@id/total_amount"
            android:text="TOTAL :"
            android:layout_below="@id/Tax"
            android:layout_alignRight="@id/Tax"/>
    </RelativeLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="BRING CHECK"
        android:textColor="@android:color/white"
        android:textSize="22dp"
        android:layout_marginTop="10dp"
        android:background="#333333"
        android:backgroundTint="#0a8f51" />

</LinearLayout>
